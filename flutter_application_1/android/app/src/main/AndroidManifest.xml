<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flutter_application_1">

    <!-- ========= Permissions ========= -->
    <!-- ใช้ไมโครโฟนสำหรับบันทึก/รู้จำเสียง -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- อินเทอร์เน็ต (สำหรับเรียก API/สตรีมเสียง ฯลฯ) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- จัดการไฟล์ (เฉพาะ Android 10 ลงมา) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <!-- อ่านไฟล์ (Android 12 ลงมา) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Android 13+ แยกสิทธิ์สื่อ -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- ถ้าคุณ “มีการ” ใช้ Foreground Service ระหว่างอัดเสียงค่อยเปิดอันนี้ -->
    <!-- ไม่ได้ใช้ก็เก็บไว้ได้ ไม่กระทบ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- ========= Application ========= -->
    <application
        android:name="${applicationName}"
        android:label="flutter_application_1"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- ธีมแรกเริ่มขณะ Flutter ยังบูต -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ห้ามลบ: Flutter ใช้ระบุ Embedding v2 -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- ใช้โดย Flutter engine สำหรับ ACTION_PROCESS_TEXT -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
